<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Free">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/whiteback"
            android:id="@+id/goback"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Free Rides"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingLeft="20dp"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Want more PickBot \nfor less?"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get a free ride worth up to GhS10 when\n\nyou refer a friend to try PickBot."
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/grey"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How invites Work"
            android:textSize="17sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/blue"
            android:layout_marginTop="15dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your invite code"
            android:textSize="17sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/grey"
            android:layout_marginTop="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/invitecode_border"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="michaelj3887Oui"
                android:gravity="start|center_vertical"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="100dp"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_height="match_parent"
                android:text="Copy"
                android:textColor="@color/blue"
                android:gravity="center"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="INVITE FRIENDS"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@color/black"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>